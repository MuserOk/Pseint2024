Algoritmo menor_en_vector
    Dimension vector[6]
    Definir i, menor, posicion_menor Como Entero
	
    Para i <- 1 Hasta 6 Con Paso 1 Hacer
        Escribir "Ingresa el número en la posición ", i, ":"
        Leer vector[i]
    FinPara

    menor <- vector[1]
    posicion_menor <- 1
	
    Para i <- 2 Hasta 6 Con Paso 1 Hacer
        Si vector[i] < menor Entonces
            menor <- vector[i]
            posicion_menor <- i
        FinSi
    FinPara
	
    Escribir "El número menor es: ", menor
    Escribir "Se encuentra en la posición: ", posicion_menor
	
FinAlgoritmo
